<h1>New Game</h1>
<ul class="letters">
<% @letters.each do |letter| %>
<li><%= letter %></li>
<% end %>
</ul>

<div>
  <p>What is the longer word you can find?</p>
  <form action="score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type your word">
  <input type="hidden" name="letter" value=<%= @letters.join %>>
  <input type="submit" value="Play!">
  </form>
</div>